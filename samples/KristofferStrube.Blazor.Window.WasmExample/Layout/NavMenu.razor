            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <svg class="bi" width="30" height="30" viewBox="-1 -1 13 8">
                    <polygon stroke="white" stroke-width="1" fill="transparent" points="0,0 0,6 7,6 11,3 11,6 7,6 11,3 11,0 0,0 0,3 4,0" stroke-linejoin="round"></polygon>
                </svg> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Messages">
                <svg class="bi" width="30" height="30" viewBox="-1 -1 12 8">
                    <polygon stroke="white" stroke-width="1" fill="transparent" points="0,0 10,0 10,6 0,6 0,0 5,3 10,0" stroke-linejoin="round"></polygon>
                </svg> Messages
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Events">
                <svg class="bi" viewBox="0 0 16 16">
                    <polygon stroke="black" stroke-width="0" fill="#FFFFFF" points="10,1 4,9 7,9 5,15 11,7 8,7"></polygon>
                </svg> Events
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Status">
                <svg class="bi" viewBox="0 0 16 16">
